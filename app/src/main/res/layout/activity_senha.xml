<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cadastro"
    tools:context=".project.view.SenhaActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/logo_colorido"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginEnd="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="-45dp"
        android:text="Reset de Senha"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#319a29"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editText16"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/edit_background_cinza"
        android:hint="Nova Senha"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:textColor="@color/edit_text_branco"
        android:textColorHint="@color/edit_hint_text_cinza"
        tools:layout_editor_absoluteY="114dp" />

    <EditText
        android:id="@+id/editText17"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/edit_background_cinza"
        android:hint="Confirmar nova senha"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/edit_text_branco"
        android:textColorHint="@color/edit_hint_text_cinza"
        tools:layout_editor_absoluteY="114dp" />

    <EditText
        android:id="@+id/editText15"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/edit_background_cinza"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/edit_text_branco"
        android:textColorHint="@color/edit_hint_text_cinza"
        tools:layout_editor_absoluteY="114dp" />

    <EditText
        android:id="@+id/editText14"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/edit_background_cinza"
        android:hint="CPF"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/edit_text_branco"
        android:textColorHint="@color/edit_hint_text_cinza"
        tools:layout_editor_absoluteY="114dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/edit_background_cinza"
        android:hint="Data de nascimento"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/edit_text_branco"
        android:textColorHint="@color/edit_hint_text_cinza"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="#319a29"
        android:text="CONCLUIR"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteY="490dp"
        tools:text="CONCLUIR" />



</LinearLayout>
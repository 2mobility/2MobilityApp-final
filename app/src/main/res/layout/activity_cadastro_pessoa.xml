<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.view.CadastroPessoaActivity"
    android:background="@drawable/cadastro"    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText8"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/logo_colorido"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginEnd="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-45dp"
        android:layout_gravity="right"
        android:layout_alignEnd="@+id/editText8"
        android:text="Cadastre-se"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#319a29"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="#313131"
        android:hint="Nome"
        android:textColor="#ffffff"
        android:inputType="none"
        android:paddingLeft="10dp"
        android:textColorHint="@color/edit_hint_text_cinza" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editText2"
        android:layout_width="181dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="#313131"
        android:hint="Cel"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColorHint="@color/edit_hint_text_cinza" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editText3"
        android:layout_width="127dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-30dp"
        android:background="#313131"
        android:hint="dd/mm/aaaa"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:textColorHint="@color/edit_hint_text_cinza" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="#313131"
        android:hint="CPF"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColorHint="@color/edit_hint_text_cinza" />



    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="#313131"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="@color/edit_hint_text_cinza" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="#313131"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="@color/edit_hint_text_cinza" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/editText8"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="#313131"
        android:hint="Confirmar Senha"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="@color/edit_hint_text_cinza" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/editText8"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Possui Automovel?"
        android:textColor="#ffffff" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText8"/>


    <Button
        android:id="@+id/button"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:background="#319a29"
        android:text="CONCLUIR"
        android:textColor="#ffffff"
        tools:text="CONCLUIR" />


